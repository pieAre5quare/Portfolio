@using PagedList;
@using PagedList.Mvc;

@model IPagedList<WebApplication1.Models.BlogPost>

@{
    ViewBag.Title = "Index";
}



<!-- Page Content -->
<section>
    <div class="container">
        <div class="content-first">
            <div class="row">
                <div class="row">
                    <div class="col-md-12">
                        @if (User.IsInRole("Admin"))
                        {
                            @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-primary" })
                        }
                    </div>
                </div>
                <!-- Blog Entries Column -->
                <div class="col-md-8">
                    <h1 class="page-header">
                        Page Heading
                        <small>Secondary Text</small>
                    </h1>
                    <!-- First Blog Post -->
                    @foreach (var item in Model)
            {
                        <div class="row">
                
                            <div class="col-md-12">
                                <h2>
                                    <a href="#">@Html.DisplayFor(modelItem => item.Title)</a>
                                </h2>
                                <p class="lead">
                                    by <a href="index.php">Allan Clark</a>
                                </p>
                                <p>
                                    <span class="glyphicon glyphicon-time"></span> Posted on @Html.DisplayFor(modelItem => item.Created)
                                </p>
                                    @if (item.Updated != null) { <p><span class="glyphicon glyphicon-time"></span>Updated on @Html.DisplayFor(modelItem => item.Updated)</p>}
                                
                                <div class="row">
                                    <div class="col-md-8 wrapper">
                                        <p>@Html.Raw(item.Body)</p>
                                    </div>
                                    <div class="col-md-4">
                                        @if (item.MediaURL != null)
                                        {
                                            <img class="img-responsive" src="@item.MediaURL" alt="" />
                                        }
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-8">
                                        @Html.ActionLink("Read More", "Details", new { slug = item.Slug }, new { @class = "btn btn-primary" })
                                    </div>
                                    <div class="col-md-4">
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <div>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-primary" })
                                            </div>
                                        }
                                    </div>
                                </div>

                            </div>
                            
                            
                                <hr>
                            </div>
                    }
                    <div class="row">
                        <div class="col-md-12">
                            <!-- Pager -->
                            <ul class="pager">
                                @*<li class="previous">
                                    <a href="#">&larr; Older</a>
                                </li>*@
                                <li>
                                    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                                </li>
                                <li class="next">
                                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @ViewBag.Query}))
                                    <!--<a href="#">Newer &rarr;</a> -->
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

             

                <!-- Blog Sidebar Widgets Column -->
                <div class="col-md-4">
                    <!-- Blog Search Well -->
                    <div class="row">
                        <div class="col-md-11">

                            @Html.Partial("_LoginPartial")
                        </div>
                    </div>
                    <div class="well">
                        
         
                        <div class="row">
                            <div class="col-md-12">
                                <h4>Blog Search</h4>
                                <div class="col-md-12">
                                    @using (Html.BeginForm("Index", "BlogPosts"))
                                    {
                                        <div class="row">
                                            <div class="col-md-10">
                                                <input type="text" name="SearchString" class="form-control" value="@ViewBag.Query">
                                            </div>
                                            <div class="col-md-1">
                                                <button class="btn btn-primary" type="submit">
                                                    <span class="glyphicon glyphicon-search"></span>
                                                </button>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <!-- /.input-group -->
                    </div>
                </div>
            </div>

            <!-- /.row -->

        </div>
    </div>
</section>

@section scripts {
        <script>
            $(document).ready(function() {
                $(".wrapper").dotdotdot({
                    /*	The text to add as ellipsis. */
                    ellipsis	: '... ',

                    /*	How to cut off the text/html: 'word'/'letter'/'children' */
                    wrap		: 'word',

                    /*	Wrap-option fallback to 'letter' for long words */
                    fallbackToLetter: true,


                    /*	Optionally set a max-height, if null, the height will be measured. */
                    height		: 100
                    
                });
            });
        </script>
    }
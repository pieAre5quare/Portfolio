<div class="modal fade" id="sum-product" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h1 class="modal-title" id="myModalLabel">Max of Five</h1>
            </div>
            <div class="modal-body">
                <div class="col-xs-6">
                    <table class="modal-boxes">
                        <tr>
                            <td>Enter 6 numbers:</td>
                        </tr>
                        <tr>
                            <td><div class="text-box"> <input type="number" id="sum1"></div></td>
                            <td><div class="text-box"> <input type="number" id="sum2"></div></td>
                        </tr>
                        <tr>
                            <td><div class="text-box"> <input type="number" id="sum3"></div></td>
                            <td><div class="text-box"> <input type="number" id="sum4"></div></td>
                        </tr>
                        <tr>
                            <td><div class="text-box"> <input type="number" id="sum5"></div></td>
                            <td><div class="text-box"> <input type="number" id="sum6"></div></td>
                        </tr>
                        <tr>
                            <td>Result</td>
                        </tr>
                        <tr>
                            <td><div class="text-box"><input type="text" id="sum-result"></div></td>
                            <td>
                                <div id="sum-button"><button>Sum</button></div>
                                <div id="product-button"><button>Product</button></div>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="col-xs-6">
                    <pre class="brush: js">$("#sum-button").click(function () {
    var nums = [
            $("#num1").val(),
            $("#num2").val(),
            $("#num3").val(),
            $("#num4").val(),
            $("#num5").val(),
            $("#num6").val()
    ];
    var total = 0;
    for (var i = 0; i < nums.length; i++) {
        total += parseFloat(nums[i]);
    }
    $("#result").val(total);
});

$("#product-button").click(function () {
    var nums = [
            $("#num1").val(),
            $("#num2").val(),
            $("#num3").val(),
            $("#num4").val(),
            $("#num5").val(),
            $("#num6").val()
    ];
    var total = 1;
    for (var i = 0; i < nums.length; i++) {
        total *= parseFloat(nums[i]);
    }
    $("#result").val(total);
});
                </pre>
                </div>
            </div>
            <div class="modal-footer no-margin">
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="factorial" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h1 class="modal-title" id="myModalLabel">Max of Five</h1>
            </div>
            <div class="modal-body">
                <div class="col-xs-6">
                    <div id="input">Enter a whole number</div>
                    <div class="text-box"> <input type="text" id="numToFact"></div>
                    <div>Result</div>
                    <div class="text-box"> <input type="text" id="fact-result"></div>
                    <div id="fact-button"><button>Submit</button></div>
                </div>
                <div class="col-xs-6">
                    <pre class="brush: js">$("#fact-button").click(function () {
    var numToFact = $("#numToFact").val();
    var total = 1;
    for (var i = numToFact; i > 0; i--) {
        total *= i;
    }
    $("#fact-result").val(total);
});
                </pre>
                </div>
            </div>
            <div class="modal-footer no-margin">
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="palindrome" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h1 class="modal-title" id="myModalLabel">Max of Five</h1>
            </div>
            <div class="modal-body">
                <div class="col-xs-6">
                    <div id="input">Enter a String</div>
                    <div class="text-box"> <input type="text" id="checkPalin"></div>
                    <div>Result</div>
                    <div class="text-box"><input type="text" id="palin-result"></div>
                    <div id="palin-button"><button>Submit</button></div>
                </div>
                <div class="col-xs-6">
                    <pre class="brush: js">$("#palin-button").click(function () {
    var stringToCheck = $("#checkPalin").val().toUpperCase();
    var reverse = stringToCheck.split("").reverse().join("");
    var result = stringToCheck === reverse;
    if (result) {
        $("#palin-result").val("This is a palindrome");
    } else {
        $("#palin-result").val("This is NOT a palindrome");
    }
   
});
                </pre>
                </div>
            </div>
            <div class="modal-footer no-margin">
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="fizzbuzz" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h1 class="modal-title" id="myModalLabel">Max of Five</h1>
            </div>
            <div class="modal-body">
                <div class="col-xs-6">
                    <div id="fizz-button"><button>FizzBuzz</button></div>
                    <pre id="fizzResult" style="overflow:auto; height:135px;"></pre>
                </div>
                <div class="col-xs-6">
                    <pre class="brush: js">$("#fizz-button").click(function () {
    var textBox = $("#fizzResult");
    var text = "";
    for (var i = 1; i < 101; i++) {
        if (i % 5 == 0 && i % 3 == 0) {
            text += "FizzBuzz\n";
        } else if (i % 5 == 0) {
            text += "Buzz\n";
        } else if (i % 3 == 0) {
            text += "Fizz\n";
        } else {
            text += i + "\n";
        }
    }
    textBox.text(text);
});
                </pre>
                </div>
            </div>
            <div class="modal-footer no-margin">
            </div>
        </div>
    </div>
</div>
